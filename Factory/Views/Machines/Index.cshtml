@{
  Layout = "_Layout";
}

@using DrSneuss.Models;
@model List<DrSneuss.Models.Machine>;

<h1>Machines</h1>

@if (@ViewBag.SearchFlag == 1 && Model.Count == 0) 
{
  <h3>No search results found.</h3>
}
else if (@ViewBag.SearchFlag == 0 && Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
}

<p>@Html.ActionLink("Add new machine", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>