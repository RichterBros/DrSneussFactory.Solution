@{
  Layout = "_Layout";
}

@using DrSneuss.Models;
@model List<DrSneuss.Models.Machine>;

<h1>Courses</h1>

@if (@ViewBag.SearchFlag == 1 && Model.Count == 0) 
{
  <h3>No search results found.</h3>
}
else if (@ViewBag.SearchFlag == 0 && Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
} 

@foreach (Course course in Model)
{
  <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</li>
}

<p>@Html.ActionLink("Add new course", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>